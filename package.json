{
    "name": "ossi-api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "seed": "docker compose run --env-from-file=.env --rm db-migrations npm run seed -w prisma-orm",
        "start": "docker compose -f docker-compose.yml up -d --build",
        "dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
        "studio": "docker compose run -p 5555:5555 --rm db-migrations npm run studio -w prisma-orm",
        "stop": "docker compose stop",
        "test": "docker compose -f docker-compose.test.yml up"
    },
    "workspaces": [
        "./prisma-orm",
        "./api-gateway",
        "./auth-api",
        "./messaging-server",
        "./notification-server",
        "./student-management-api"
    ]
}
