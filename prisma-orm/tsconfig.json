{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2022"
    ]
  },
  "include": [
    "generated/prisma"
  ],
  "exclude": [
    "node_modules"
  ]
}