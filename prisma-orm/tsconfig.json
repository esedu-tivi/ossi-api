{
  "compilerOptions": {
    "noEmitOnError": false,
    "rootDir": ".",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2022"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "index.ts",
    "prisma/**/*.ts",
    "generated/**/*.ts",
    "prisma.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/seed.ts"
  ]
}